<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height">

    <Button
        android:id="@+id/left_button"
        android:layout_width="@dimen/action_bar_button_width"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/action_bar_title_text_view"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/action_bar_button_width"
        android:layout_marginLeft="@dimen/action_bar_button_width"
        android:layout_marginRight="@dimen/action_bar_button_width"
        android:layout_marginEnd="@dimen/action_bar_button_width"
        />

    <Button
        android:id="@+id/right_button"
        android:layout_width="@dimen/action_bar_button_width"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>