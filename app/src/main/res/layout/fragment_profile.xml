<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation_layer.user_profile.ProfileFragment"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/coverFrame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_frame_height"
            android:background="@color/tw__composer_deep_gray">

            <ImageView
                android:id="@+id/coverImageView"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/addCoverTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+ cover photo"
                android:textColor="@color/white" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="@dimen/profileImageSize"
                android:layout_height="@dimen/profileImageSize"
                android:layout_margin="8dp"
                android:scaleType="centerInside"
                android:src="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Profile Photo" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tw__composer_deep_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/drivesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What>Drives you?"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/drivesEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/drivesTextView"
                android:layout_below="@+id/drivesTextView"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/arrow"
                android:background="@drawable/edit_text_bg"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textColorHint="@color/action_bar_text_color" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/addPageFrame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_frame_height"
            android:background="@color/tw__composer_deep_gray">

            <TextView
                android:id="@+id/addPageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+ my page"
                android:textColor="@color/white" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>
