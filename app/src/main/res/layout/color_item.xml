<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/color_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="Just fell like >driving in..."/>

        <ImageView
            android:id="@+id/color_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:background="@color/colorAccent"/>

        <ImageView
            android:id="@+id/drivetag_icon_image_view"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/inset_1"
            android:src="@drawable/drive_enabled_icon"
            android:layout_marginEnd="@dimen/inset_1"/>

    </RelativeLayout>

</LinearLayout>