<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="drivetag.drivetag.com.driveceos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation_layer.MainActivity"
            android:label="@string/title_activity_main">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN"/> -->
            <!-- <category android:name="android.intent.category.LAUNCHER"/> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".presentation_layer.auth.SignInActivity"
            android:noHistory="true" />
        <activity
            android:name=".presentation_layer.auth.SignUpActivity"
            android:noHistory="true" />
        <activity
            android:name=".presentation_layer.user_profile.UserProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation_layer.user_profile.suggestions.SuggestionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation_layer.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:noHistory="true"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="drivetag.drivetag.com.driveceos.presentation_layer.BaseActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation_layer.auth.ForgotPasswordActivity"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>